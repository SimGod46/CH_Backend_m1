<div class="d-flex align-items-center justify-content-center" style="height: 100vh; padding: 0 15px; margin: 0;">
  <div class="container" style="width:33%">
    <div class="row">
        <h1>Inicio de sesión</h1>
    </div>
    <div class="row">
      <div class="col-md-12">
        <form action="/api/sessions/login" method="POST">
        <div class="mb-3">
            <label for="inputUsername" class="form-label">Usuario</label>
            <input type="text" class="form-control" id="inputUsername" placeholder="nombre de usuario" name="username">
        </div>
        <div class="mb-3">
            <label for="inputPassword" class="form-label">Contraseña</label>
            <input type="password" class="form-control" id="inputPassword" placeholder="Contraseña" name="password">
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Iniciar sesión</button>
                  <a href="/api/sessions/github" class="btn btn-dark" >Iniciar con github</a>
        </div>
        </form>
      </div>
    </div>
    <div class="row">
      <a href="/restorePassword" style="text-decoration:none;color:grey" >Olvide mi contraseña</a>
    </div>
  </div>
</div>